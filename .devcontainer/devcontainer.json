{
	"build": {
		"dockerfile": "Dockerfile"
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-vscode.cpptools-extension-pack",
				"GitHub.copilot"
			],
			"settings": {
				"C_Cpp.default.compilerPath": "/usr/bin/g++-13",
				"C_Cpp.default.cppStandard": "c++23",
				"C_Cpp.default.intelliSenseMode": "gcc-x64"
			}
		}
	}
}